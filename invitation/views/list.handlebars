<table class="table table-bordered">
    <thead>
        <th>ID</th>
        <th>Τίτλος</th>
        <th>Μετονομασία</th>
        <th>Οριστικοποίηση</th>
        <th>Αντιγραφή</th>
        <th>Διαγραφή</th>
        <th>Διαχείριση Χρηστών</th>
        <th>Deploy</th>
    </thead>
    <tbody>
        {{#invitations}}
        <tr>
            <td class='id'>{{ID}}</td>
            <td><a href="edit/{{ID}}">{{Name}}</a></td>
            <td><input class="rename-text"> <a href="#" class="btn btn-info btn-sm rename-btn"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Μετονομασία</a></</td>
            <td class="text-center"><input type="checkbox" class="final-checkbox" {{#if IsFinal}} checked{{/if}}></td>
            <td><button class="btn btn-info btn-sm clone-btn"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Κλωνοποίηση</a></td>
            <td><button class="btn btn-danger btn-sm remove-btn" data-toggle="confirmation"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
            <td><a href="invitation/{{ID}}/users" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Χρήστες</a></td>
            <td><button class="btn btn-danger btn-sm" data-toggle="confirmation"><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> Παραγωγική</button></td>
        </tr>
        {{/invitations}}
    </tbody>
</table>

<br>
<label>
    Name: <input id="fieldName">
    <button type="button" id="new-invitation" class="btn btn-info btn-sm" >Προσθήκη</button>
</label>
<script src="/list.js"></script>
<script src="/bootstrap-confirmation.js"></script>
